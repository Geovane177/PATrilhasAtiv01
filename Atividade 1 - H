using System;

namespace Atividaded_1___H
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("Digite o pre√ßo de um produto: ");
			double produto = Convert.ToDouble(Console.ReadLine());
			
			Console.WriteLine("Digite o desconto do produto em %: ");
			double desconto = Convert.ToDouble(Console.ReadLine());
			
			double valor = (produto * desconto) / 100;
			valor = produto - valor;
			Console.WriteLine(valor);
			
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
